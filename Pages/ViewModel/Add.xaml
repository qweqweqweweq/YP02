<Page x:Class="YP02.Pages.ViewModel.Add"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YP02.Pages.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Add">

    <Border x:Name="Info_user" MinHeight="400">
        <Grid>
            <Label Content="Вид модели" Margin="39,28,26,0" Foreground="Black" FontSize="30" FontFamily="Yu Gothic UI Semibold" HorizontalContentAlignment="Left" Height="52" VerticalAlignment="Top"/>
            <Label Content="Название вида модели" Margin="39,85,232,0" Foreground="Black" FontSize="15" FontFamily="Yu Gothic UI Semilight" HorizontalContentAlignment="Left" Height="29" VerticalAlignment="Top"/>
            <TextBox  x:Name="tb_Name" Height="35" Background="#ffdedede" Margin="39,112,28,0" VerticalAlignment="Top" Text=""/>
            <Label Content="Тип оборудования" Margin="39,213,232,0" Foreground="Black" FontSize="15" FontFamily="Yu Gothic UI Semilight" HorizontalContentAlignment="Left" Height="29" VerticalAlignment="Top"/>
            <ComboBox x:Name="cm_OborType" Height="35" Background="#ffdedede" Margin="39,240,26,0" VerticalAlignment="Top" Text=""/>

            <Button Content="Сохранить" Margin="0,0,142.2,10" VerticalAlignment="Bottom" Height="40" HorizontalAlignment="Right" Width="105" Click="Click_Redact">

            </Button>
            <Button Content="Назад"  Background="#ffe48f2b" Margin="0,0,26.2,10" VerticalAlignment="Bottom" Height="40" HorizontalAlignment="Right" Width="105" Click="Click_Cancel_Redact">

            </Button>

        </Grid>
    </Border>
</Page>
